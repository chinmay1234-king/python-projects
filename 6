 

import tkinter as tk
from tkinter import messagebox

def avengers_score(name):
    try:
        power = int(power_entry.get())
        strength = int(strength_entry.get())
        combat = int(combat_entry.get())
        intelligence = int(intelligence_entry.get())
        speed = int(speed_entry.get())
        durability = int(durability_entry.get())

        total_score = power + strength + combat + intelligence + speed + durability
        messagebox.showinfo("Avenger Score", f"{name}'s total score is: {total_score}")
    except ValueError:
        messagebox.showerror("Input Error", "Please enter valid integers for all fields.")

# GUI setup
root = tk.Tk()
root.title("Avengers Score Calculator")

# Labels and Entry widgets
labels = ["Power", "Strength", "Combat", "Intelligence", "Speed", "Durability"]
entries = []

for i, label in enumerate(labels):
    tk.Label(root, text=label).grid(row=i, column=0)
    entry = tk.Entry(root)
    entry.grid(row=i, column=1)
    entries.append(entry)

power_entry, strength_entry, combat_entry, intelligence_entry, speed_entry, durability_entry = entries

# Buttons for each Avenger
tk.Button(root, text="Thanos", command=lambda: avengers_score("Thanos")).grid(row=6, column=0)
tk.Button(root, text="Hulk", command=lambda: avengers_score("Hulk")).grid(row=6, column=1)
tk.Button(root, text="Ironman", command=lambda: avengers_score("Ironman")).grid(row=7, column=0)
tk.Button(root, text="Captain America", command=lambda: avengers_score("Captain America")).grid(row=7, column=1)

root.mainloop()
