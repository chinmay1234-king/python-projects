#  ROCK PAPer scissor GAME

import random
item_list=["rock","paper","scissor"]

user_choice=input("enter ur choice: rock,paper,scissor: ")
comp_choice=random.choice(item_list)
print(f"user choice {user_choice} and the computer choice is {comp_choice}")

if user_choice==comp_choice:
    print("match gets ties")
elif user_choice=="rock":
    if comp_choice=="paper":
        print("computer wins")
    else:
        print("user wins")
elif user_choice=="paper":
    if comp_choice=="rock:
        print("user wins")
    else:
        print("computer wins")
elif user_choice=="scissor":
    if comp_choice=="paper":
        print("user wins")
    else:
        print("computer wins")

